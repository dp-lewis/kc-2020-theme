<article class="flex bg-black bg-cover bg-center lg:bg-left md:justify-end" style="background-image: url({{ Image(imageID).src }})">
    <div class="angle w-full md:w-1/3 bg-white bg-blur bg-opacity-85 flex flex-col justify-center items-center text-center p-8 md:pt-24 md:pb-16">
        <h1 class="text-3xl lg:text-4xl leading-none mb-4">{{ title }}</h1>
        <p class="text-xl leading-none mb-3 md:mb-6">{{ subtitle }}</p>
        <a href="{{ url }}" class="font-normal bg-black text-white px-5 py-3 leading-none rounded">{{ linktitle }}</a>
    </div>
</article>
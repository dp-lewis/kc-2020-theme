<article class="md:flex bg-kombiblack bg-cover bg-center lg:bg-left md:justify-end" style="background-image: url({{ Image(imageID).src }})">
    <div class="md:hidden w-full"><img src="{{ Image(imageID).src }}" loading="lazy" /></div>
    <div class="md:angle w-full md:w-1/3 bg-white bg-blur bg-opacity-85 flex flex-col justify-center items-center text-center p-4 md:pl-8 md:pt-24 md:pb-16">
        <h1 class="text-3xl lg:text-4xl leading-none mb-2 md:mb-4">{{ title }}</h1>
        <p class="text-xl leading-none mb-6 md:mb-6">{{ subtitle }}</p>
        <a href="{{ url }}" class="font-normal bg-kombiblack text-white px-5 py-3 leading-none rounded">{{ linktitle }}</a>
    </div>
</article>